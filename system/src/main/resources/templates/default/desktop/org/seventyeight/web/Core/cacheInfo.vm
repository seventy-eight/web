<div style="text-align: center">
<h2>Statistics</h2>

<table>
    <tbody>
        <td>Item</td>
        <td>Document</td>
        <td>Sessions</td>
    </tbody>

    <tr>
        <td>Size:</td>
        <td colspan="2" style="text-align: center">$item.getDocumentCache().getCache().size()</td>
    </tr>

    <tr>
        <td>Misses:</td>
        <td>$item.getDocumentCache().getMisses()</td>
        <td>$item.getSessionCache().getMisses()</td>
    </tr>

    <tr>
        <td>Hits:</td>
        <td>$item.getDocumentCache().getHits()</td>
        <td>$item.getSessionCache().getHits()</td>
    </tr>

    <tr>
        <td>Writes:</td>
        <td>$item.getDocumentCache().getWrites()</td>
        <td>$item.getSessionCache().getWrites()</td>
    </tr>
</table>

<h2>Document info</h2>

#set($cache = $item.getDocumentCache().getCache())
<table>
#foreach($c in $cache)
    <tr>
        <td style="text-align: left">$c</td>
    </tr>
#end
</table>

</div>