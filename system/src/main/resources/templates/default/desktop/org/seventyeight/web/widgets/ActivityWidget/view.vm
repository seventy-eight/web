<table style="width: 100%">
#foreach($r in $item.getActivities($request))
    <tr>
        <td style="width: 100%;text-align: center; padding-left: 10px">
            Updated $dateUtils.getDateString($r.getUpdated()) ago
        </td>
    </tr>


    <tr>
        <td style="text-align: center;" colspan="">
            #render($r "wide" true)
        </td>

    </tr>
#end
</table>