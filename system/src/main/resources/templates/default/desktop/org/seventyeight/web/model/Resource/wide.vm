<div>
    <table style="width: 100%">
        <tr>
            <td style="width: 250px; text-align: center" rowspan="2">
                <a href="$item.getUrl()"><img src="$item.getPortrait()" style="width: 150px"></a>
            </td>
            <td style="text-align: left; vertical-align: top; height: 15px; font-weight: bold">
                $item.getDisplayName()
            </td>
        </tr>

        <tr>
            <td style="text-align: left; vertical-align: top; ">
                By <a href="$item.getOwner().getUrl()">$item.getOwner().getDisplayName()</a>
            </td>
        </tr>
    </table>
</div>