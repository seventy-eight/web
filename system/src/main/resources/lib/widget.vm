#macro(widget $name $title)
<div id="widgetContainer$name" class="widget">

</div>

<script type="text/javascript">

    $(function() {
        $.ajax({
            type: "GET",
            url: "/widgets/Activity widget/view",
            success: function(data, textStatus, jqxhr){$('#widgetContainer$name').html(data)},
            error: function(ajax, text, error) {alert(error)}
        });
    });

</script>
#end